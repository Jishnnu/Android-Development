<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/catamaran"
        android:text="@string/colour_switch_215"
        android:textColor="#4F1B1D"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bluebtn_215"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/catamaran"
        android:text="@string/blue"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toTopOf="@+id/fragment_215"
        app:layout_constraintEnd_toStartOf="@+id/blackbtn_215"
        app:layout_constraintStart_toStartOf="@+id/fragment_215"
        tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/blackbtn_215"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catamaran"
        android:text="@string/black"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="@+id/bluebtn_215"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/catamaran"
        android:text="@string/pick_a_colour"
        android:textColor="#4F1B1D"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bluebtn_215"
        app:layout_constraintEnd_toEndOf="@+id/redbtn_215"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bluebtn_215"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/redbtn_215"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/catamaran"
        android:text="RED"
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="@+id/blackbtn_215"
        app:layout_constraintEnd_toEndOf="@+id/fragment_215"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toEndOf="@+id/blackbtn_215" />

    <fragment
        android:id="@+id/fragment_215"
        android:name="com.example.fragmentbasics.Fragment_01"
        android:layout_width="297dp"
        android:layout_height="320dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_01" />

</androidx.constraintlayout.widget.ConstraintLayout>